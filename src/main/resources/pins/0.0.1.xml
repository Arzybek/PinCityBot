<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet id="0.0.1-1" author="kat">
        <createTable tableName="cities">
            <column name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <insert tableName="cities">
            <column name="id" value="1"/>
            <column name="name" value="Бишкек"/>
        </insert>
        <insert tableName="cities">
            <column name="id" value="2"/>
            <column name="name" value="Екатеринбург"/>
        </insert>
    </changeSet>

    <changeSet id="0.0.1-2" author="kat">
        <createTable tableName="chats_cities">
            <column name="chat_id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="city_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_chats_cities" references="cities(id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="0.0.1-3" author="kat">
        <createTable tableName="places">
            <column name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="city_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_places_cities" references="cities(id)"/>
            </column>
            <column name="type" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="address" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar">
                <constraints nullable="true"/>
            </column>
            <column name="pin" type="varchar">
                <constraints nullable="true"/>
            </column>
            <column name="updated_by" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="state" type="varchar">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <loadData file="data/places.csv" tableName="places" relativeToChangelogFile="true"/>
    </changeSet>

    <changeSet id="0.0.1-4" author="kat">
        <createTable tableName="chats_pins">
            <column name="chat_id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="place_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_chats_pins_places" references="places(id)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
